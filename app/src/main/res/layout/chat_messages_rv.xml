<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/round_rec"
        android:backgroundTint="@color/reciever"
        android:padding="15dp"
        android:layout_marginEnd="80dp"
        android:id="@+id/left_msg"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:text="Yooo broski"
                android:id="@+id/left_msg_text"/>
            <TextView
                android:id="@+id/left_msg_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="17:38"
                android:textColor="@color/white"
                android:textSize="10sp"
                android:layout_below="@+id/left_msg_text"
                />
        </RelativeLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/round_rec"
        android:backgroundTint="@color/sender"
        android:layout_alignParentEnd="true"
        android:padding="15dp"
        android:layout_marginStart="80dp"
        android:orientation="vertical"
        android:id="@+id/right_msg">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:text="My guy"
                android:id="@+id/right_msg_text"/>

            <TextView
                android:id="@+id/right_msg_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="17:38"
                android:textColor="@color/white"
                android:textSize="10sp"
                android:layout_alignStart="@+id/right_msg_text"
                android:layout_below="@+id/right_msg_text"
                />
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>