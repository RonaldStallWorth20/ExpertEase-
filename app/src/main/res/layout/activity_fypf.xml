<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FYPf"
    android:background="@drawable/back1">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Home Page"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="20sp"></TextView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/title"
        android:layout_marginTop="-15dp">

        <Button
            android:id="@+id/BPlumbers"
            android:layout_width="193dp"
            android:layout_height="132dp"
            android:text="Plumbers"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.926"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.117"
            app:layout_constraintWidth_percent="0.5"></Button>

        <Button
            android:id="@+id/BElectricians"
            android:layout_width="182dp"
            android:layout_height="134dp"
            android:text="Electricians"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.078"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.434"
            app:layout_constraintWidth_percent="0.5"></Button>

        <Button
            android:id="@+id/BCarpenters"
            android:layout_width="185dp"
            android:layout_height="136dp"
            android:text="Carpenters"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.915"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.433"
            app:layout_constraintWidth_percent="0.5"></Button>

        <Button
            android:id="@+id/BMechanics"
            android:layout_width="191dp"
            android:layout_height="132dp"
            android:text="Mechanics"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.072"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.737"
            app:layout_constraintWidth_percent="0.5"></Button>

        <Button
            android:id="@+id/BPainters"
            android:layout_width="184dp"
            android:layout_height="135dp"
            android:text="Painters"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.929"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.739"
            app:layout_constraintWidth_percent="0.5"></Button>

        <Button
            android:id="@+id/BDomestics"
            android:layout_width="181dp"
            android:layout_height="134dp"
            android:text="Domestics"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.056"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.119"
            app:layout_constraintWidth_percent="0.5"></Button>


    </androidx.constraintlayout.widget.ConstraintLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="84dp"
        android:padding="10dp"
        android:layout_alignParentBottom="true"
        android:backgroundTint="#1A1A1A"
        android:id="@+id/bottom_layout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Search"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:id="@+id/but1" />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Post"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:id="@+id/but2" />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Profile"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:id="@+id/but3"
           />
        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>